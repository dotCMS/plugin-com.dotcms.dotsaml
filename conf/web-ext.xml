	<filter-class>com.dotcms.plugin.saml.v3.filter.SamlAccessFilter</filter-class>
	<async-supported>true</async-supported>
</filter>

<filter-mapping>
	<filter-name>SamlAccessFilter</filter-name>
	<url-pattern>/*</url-pattern>
